<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.danihg.calypso.ui.start.SplashFragment"
        android:label="Splash">
        <action
            android:id="@+id/action_splash_to_initial"
            app:destination="@id/initialFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/initialFragment"
        android:name="com.danihg.calypso.ui.start.InitialFragment"
        android:label="Initial">
        <action
            android:id="@+id/action_initial_to_signUp"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_initial_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_initial_to_home"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.danihg.calypso.ui.start.SignupFragment"
        android:label="Sign Up" >
        <action
            android:id="@+id/action_signUp_to_initial"
            app:destination="@id/initialFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.danihg.calypso.ui.start.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/initialFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <!-- Home destination -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.danihg.calypso.ui.home.HomeFragment"
        android:label="Home" />
        <action
            android:id="@+id/action_home_to_camera"
            app:destination="@id/cameraFragment" />
        <action
            android:id="@+id/action_home_to_teams"
            app:destination="@id/teamsFragment" />

    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.danihg.calypso.camera.CameraFragment"
        android:label="Camera" />

    <fragment
        android:id="@+id/teamsFragment"
        android:name="com.danihg.calypso.teams.TeamsFragment"
        android:label="Teams" />
</navigation>