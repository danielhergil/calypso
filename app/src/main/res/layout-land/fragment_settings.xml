<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/settings_menu"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="40dp">

        <!-- Bot칩n para c치mara (oculto al inicio) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettingsCamera"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:visibility="gone"
            android:layout_marginEnd="8dp"
            android:alpha="0.8"
            app:icon="@drawable/ic_settings_camera"
            app:iconSize="34dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"
            app:backgroundTint="#CCFFFFFF"
            app:cornerRadius="28dp"/>

        <!-- Bot칩n para stream (oculto al inicio) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettingsStream"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:visibility="gone"
            android:layout_marginEnd="8dp"
            android:alpha="0.8"
            app:icon="@drawable/ic_settings_stream"
            app:iconSize="34dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"
            app:backgroundTint="#CCFFFFFF"
            app:cornerRadius="28dp"/>

        <!-- Bot칩n principal de ajustes -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:alpha="0.8"
            app:icon="@drawable/ic_settings"
            app:iconSize="24dp"
            app:backgroundTint="#CCFFFFFF"
            app:cornerRadius="28dp"/>
    </LinearLayout>

</FrameLayout>
