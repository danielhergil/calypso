<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash / launch theme -->
    <style name="Theme.Calypso.Launcher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- full-screen gradient + logo -->
        <item name="windowActionBar">false</item>
    </style>

    <!-- Fullscreen variant for CameraActivity -->
    <style name="Theme.Calypso.Fullscreen" parent="Theme.Calypso">
        <!-- remove the title bar -->
        <item name="android:windowNoTitle">true</item>
        <!-- draw behind status bar -->
        <item name="android:windowFullscreen">true</item>
        <!-- optional: make status bar transparent -->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Main app theme, DayNight MaterialComponents -->
    <style name="Theme.Calypso" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- primary / secondary / tertiary -->
        <item name="colorPrimary">@color/purple_40</item>
        <item name="colorSecondary">@color/purple_grey_40</item>
        <item name="colorTertiary">@color/pink_40</item>

        <!-- on-colors -->
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnTertiary">@color/black</item>

        <!-- error / accent -->
        <item name="colorError">@color/calypso_red</item>

        <!-- custom body text style -->
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Calypso.BodyLarge</item>
    </style>

    <!-- BodyLarge matches your Compose Typography.bodyLarge -->
    <style name="TextAppearance.Calypso.BodyLarge" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

</resources>